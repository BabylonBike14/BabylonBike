<!-- Modal Sign In-->
<div id="Meme" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3 class="modal-title">Nuevo Bicicleta</h3>
      </div>
      <div class="modal-body">

        <div class="" id="responseM"></div>

        <form class="" action="#" id="newMeme" method="post" enctype="multipart/form-data">

          <div class="form-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-text-width"></i> Titulo</span>
            <input type="text" class="form-control" placeholder="Titulo" name="title" id="title" required>
          </div>

          <div class="form-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i> Producto</span>
            <select name="category" class="form-control">

              <option value="Bicicleta">Bicicleta</option>
              <option value="Accesorio">Accesorio</option>
              <option value="Componente">Componente</option>
            </select>
          </div>

          <div class="form-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-wrench"></i> Modelo</span>
            <select name="model" class="form-control">
                <option value="montaÃ±a">Monta&ntilde;a</option>
                <option value="Pista">Pista</option>
                <option value="Electrica">Electrica</option>
            </select>
          </div>

          <div class="form-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-usd"></i> Precio</span>
            <input type="number" name="price" id="price" class="form-control" required>
          </div>

          <div class="form-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-comment"></i>Comentario</span>
            <textarea rows="4" style="resize:none" name="comment" id="comment" cols="87" placeholder="Comenta!!" maxlength="440" minlength="5" required></textarea>
          </div>

          <div class="form-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-open-file"></i>Imagenes</span>
            <label class="btn btn-warning btn-file form-control">
              Elegir imagenes <input type="file" name="files[]" id="files" value="" multiple="multiple" required accept="image/*" style="display: none;">
            </label>
          </div>

          <div class="" id="message"></div><br>
          <div class="" id="imgPreview"></div><br>
          <button type="submit" id="btnNewMeme" class="btn btn-success" name=s"button">Comentar!!</button>
          </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
